    newquantity = parseInt(newquantity);
    var current_cart = readCookie('shopping_cart');
    new_cart = current_cart.replace("%2c" + productId + '-' + quantity, "%2c" + productId + '-' + newquantity);
    createCookie('shopping_cart', new_cart, 1);
}
